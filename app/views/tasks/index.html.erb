<h1>
  AC To Do List Demo
</h1>

<h2> 
  To Do Tasks
</h2>

<ul>
 <% @tasks.each do |task| %>
   <li>
     <%= task.task %>
     <%= link_to 'Show', task_path(task) %>
     <%= link_to 'Edit', edit_task_path(task) %>
     <%= link_to 'Delete', task, method: :delete, data:{ confirm: "Are you sure?" } %>
   </li>
 <% end %>
</ul>

<%= link_to 'New task', new_task_path %>

<h2> 
  Completed
</h2>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= task.task %>
    <%= link_to 'Delete', task, method: :delete, data:{ confirm: "Are you sure?" } %>
  </li>  
  <% end %>
</ul>


